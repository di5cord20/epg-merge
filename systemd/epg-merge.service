[Unit]
Description=EPG Merge Application
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/opt/epg-merge-app/backend
Environment="CONFIG_DIR=/config"
Environment="ARCHIVE_DIR=/config/archives"
Environment="CACHE_DIR=/config/epg_cache"
ExecStart=/opt/epg-merge-app/backend/venv/bin/uvicorn main:app --host 0.0.0.0 --port 9194 --workers 1
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target