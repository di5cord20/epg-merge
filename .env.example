# EPG Merge Environment Variables
# Copy to .env and fill in actual values

# ============================================================================
# BACKEND CONFIGURATION
# ============================================================================

# Flask environment
FLASK_ENV=production
FLASK_DEBUG=0

# API configuration
API_HOST=0.0.0.0
API_PORT=9193
API_LOG_LEVEL=INFO

# Database (if applicable)
DATABASE_URL=sqlite:///./app.db

# Data directories
DATA_DIR=/app/data
LOGS_DIR=/app/logs

# ============================================================================
# FRONTEND CONFIGURATION
# ============================================================================

# API base URL for frontend to reach backend
REACT_APP_API_BASE=http://localhost:9193

# Environment
REACT_APP_ENV=production

# ============================================================================
# DOCKER COMPOSE
# ============================================================================

# Service names
BACKEND_SERVICE=backend
FRONTEND_SERVICE=frontend

# Network
NETWORK_NAME=epg-network

# ============================================================================
# OPTIONAL: External Services
# ============================================================================

# Discord webhook for notifications (optional)
DISCORD_WEBHOOK=

# Sentry error tracking (optional)
SENTRY_DSN=

# ============================================================================
# SECURITY
# ============================================================================

# Secret key for sessions (generate with: python -c "import secrets; print(secrets.token_hex(32))")
SECRET_KEY=

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost,http://localhost:3000,http://localhost:80

# ============================================================================
# PERFORMANCE
# ============================================================================

# Worker threads
WORKER_THREADS=4

# Cache TTL in seconds
CACHE_TTL=300
